{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": [
    "packages/frontend/dist",
    "packages/AzurLaneData",
    "packages/gsheets2img",
    ".venv"
  ],
  "compilerOptions": {
    "types": ["vite/client", "bun"],
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "@/assets/*": ["packages/frontend/src/assets/*"],
      "@/components/*": ["packages/frontend/src/components/*"],
      "@/constants/*": ["packages/frontend/src/constants/*"],
      "@/db/*": ["packages/frontend/src/db/*"],
      "@/layouts/*": ["packages/frontend/src/layouts/*"],
      "@/styles/*": ["packages/frontend/src/styles/*"],
      "@/store/*": ["packages/frontend/src/store/*"],
      "@/utils/*": ["packages/frontend/src/utils/*"],
      "@/packages/*": ["packages/*"],
      "@/tools/*": ["packages/dev/src/*"]
    }
  }
}

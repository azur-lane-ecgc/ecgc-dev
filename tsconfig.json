{
  "extends": "./node_modules/astro/tsconfigs/strict.json",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist", "dev/_backup/*", "dev/python/*"],
  "compilerOptions": {
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@db/*": ["src/db/*"],
      "@store/*": ["src/store/*"],
      "@tools/*": ["dev/*"],
      "@ALData/*": ["AzurLaneData/*"]
    }
  }
}

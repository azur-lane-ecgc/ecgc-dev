{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist", "_backup/*", "dev/python/*", "packages/AzurLaneData/*"],
	"compilerOptions": {
		"types": ["vite/client", "bun"],
		"allowJs": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"paths": {
			"@assets/*": ["src/assets/*"],
			"@components/*": ["src/components/*"],
			"@layouts/*": ["src/layouts/*"],
			"@styles/*": ["src/styles/*"],
			"@utils/*": ["src/utils/*"],
			"@db/*": ["src/db/*"],
			"@store/*": ["src/store/*"],
			"@tools/*": ["dev/*"],
			"@ALData/*": ["packages/AzurLaneData/*"]
		}
	}
}

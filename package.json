{
  "name": "ecgc-dev",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "update": "bun upgrade && bun update && bun install",
    "rebuild": "git pull origin main --rebase && rm -rf node_modules && rm -rf .astro && rm -rf dist && bun run update",
    "reset": "bun run rebuild && bun run devtools && bun run build",
    "submodule": "git submodule update --recursive --remote",
    "gsheets2img": "bash dev/python/gsheets2imgur.sh -g",
    "imgur": "bash dev/python/gsheets2imgur.sh -i",
    "gsheets2imgur": "bash dev/python/gsheets2imgur.sh",
    "compress": "bash dev/typescript/compressImages.sh",
    "smol_format": "bunx --bun prettier --write \"src/**/*.{astro,json}\" \"dev/**/*.{astro,json}\" --ignore-path .prettierignore",
    "format": "bunx --bun prettier --write \"src/**/*.{astro,html,js,jsx,md,mdx,svelte,ts,tsx,vue,json,css}\" \"dev/**/*.{astro,html,js,jsx,md,mdx,svelte,ts,tsx,vue,json,css}\" --ignore-path .prettierignore",
    "devtools": "bun run submodule && bash dev/runAllTools.sh && bun run smol_format",
    "build": "bunx --bun astro check && bunx astro build",
    "cf-build": "bunx astro build",
    "compress-build": "bun run build && bun run compress",
    "open": "bash dev/open-link.sh http://localhost:4321/",
    "cf-open": "bash dev/open-link.sh http://localhost:4321/",
    "dev": "bunx astro dev",
    "cf-dev": "bunx wrangler dev",
    "start": "bun run devtools && bun run build && bun run open && bun run dev",
    "cf-start": "bun run devtools && bun run build && bun run cf-open && bun run cf-dev",
    "deploy": "bun run compress-build && bunx wrangler deploy"
  },
  "dependencies": {
    "@astrojs/react": "^4.3.0",
    "astro": "^5.12.9",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-intersection-observer-hook": "^4.0.0",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/sitemap": "^3.4.2",
    "astro-meta-tags": "^0.4.0",
    "@tailwindcss/vite": "^4.1.11",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/bun": "^1.2.20",
    "knip": "^5.62.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "sharp": "^0.34.3",
    "wrangler": "^4.28.1"
  },
  "private": true
}

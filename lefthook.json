{
  "pre-commit": {
    "parallel": true,
    "commands": {
      "prettier": {
        "glob": [
          "dev/**/*.{astro,html,js,jsx,md,mdx,svelte,ts,tsx,vue,json,css}",
          "src/**/*.{astro,html,js,jsx,md,mdx,svelte,ts,tsx,vue,json,css}"
        ],
        "run": "bunx --bun prettier --write {staged_files}",
        "stage_fixed": true
      }
    }
  }
}

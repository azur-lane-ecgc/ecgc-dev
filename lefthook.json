{
  "pre-commit": {
    "parallel": false,
    "commands": {
      "oxlint": {
        "glob": [
          "packages/dev/**/*.{astro,html,js,jsx,md,mdx,svelte,ts,tsx,vue,json,css}",
          "packages/frontend/**/*.{astro,html,js,jsx,md,mdx,svelte,ts,tsx,vue,json,css}"
        ],
        "run": "bunx --bun oxlint --fix {staged_files}",
        "stage_fixed": true
      },
      "prettier": {
        "glob": [
          "packages/dev/**/*.{astro,html,js,jsx,md,mdx,svelte,ts,tsx,vue,json,css}",
          "packages/frontend/**/*.{astro,html,js,jsx,md,mdx,svelte,ts,tsx,vue,json,css}"
        ],
        "run": "bunx --bun prettier --write {staged_files}",
        "stage_fixed": true
      }
    }
  }
}

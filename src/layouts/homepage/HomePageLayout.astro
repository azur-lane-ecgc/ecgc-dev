---
import "@styles/home_page.css"
import "@styles/fontawesome/css/fontawesome.css"
import "@styles/fontawesome/css/brands.css"
import "@styles/fontawesome/css/solid.css"
import "@styles/poppins_font.css"

import { Navbar } from "@components/_common/Navbar"
import Footer from "@components/_common/Footer.astro"

interface Props {
  title: string
  activePage?: string
  metaUrl?: string
  metaImage?: string
  metaDescription: string
}

const { title, activePage, metaUrl, metaImage, metaDescription } = Astro.props
---

<!-- for google search -->
<head>
  <meta
    name="google-site-verification"
    content="haSqOW7yYrOiz_6U0wAqWSb7IBGh10_KZ8cNkRJXyhQ"
  />

  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title} - ECGC</title>
  <meta name="description" content={metaDescription} />
  <meta property="og:title" content={title} />
  <meta property="og:type" content="website" />
  <meta
    property="og:url"
    content={`https://samheart564.github.io/ECGC${metaUrl ? `/${metaUrl}` : ""}`}
  />
  {
    metaImage ? (
      <meta
        property="og:image"
        content={`https://samheart564.github.io/test_ecgc_2/images/${metaImage}`}
      />
    ) : (
      <meta
        property="og:image"
        content="https://samheart564.github.io/test_ecgc_2/images/misc/SiteIcon.png"
      />
    )
  }
  <meta name="og:description" content={metaDescription} />

  <link
    rel="icon"
    type="image/x-icon"
    href="/test_ecgc_2/images/misc/SiteIcon.ico"
  />

  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "Azur Lane ECGC",
      "url": "https://samheart564.github.io/test_ecgc_2",
      "image": "https://samheart564.github.io/test_ecgc_2/images/misc/SiteIcon.png"
    }
  </script>

  <span data-astro-transition-persist="someId2">
    <noscript data-astro-transition-persist="someId2"
      >Your browser does not support JavaScript!
    </noscript>
  </span>
</head>

<body>
  <Navbar activePage={activePage} client:idle />
  <slot />
</body>
<Footer />

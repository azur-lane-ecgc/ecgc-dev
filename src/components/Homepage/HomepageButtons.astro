---
const changelogUrl = "changelog"
const contributorsUrl = "contributors"
const discordUrl = "https://discord.gg/wKJKxq5WQt"
---

<div class='flex flex-col md:flex-row justify-center md:gap-5'>
  <div class='w-full md:w-1/3 mb-3 flex justify-center'>
    <a
      class='flex items-center justify-center w-full py-[10px] text-lg border border-blue-500 text-blue-500 hover:bg-blue-500 hover:text-white rounded-lg transition'
      href={changelogUrl}
      target='_blank'
      rel='noopener noreferrer'
    >
      <b class='text-xl lg:text-2xl'>
        <i class='fa fa-clock-rotate-left nav-logo-custom'></i> Changelog
      </b>
    </a>
  </div>
  <div class='w-full md:w-1/3 mb-3 flex justify-center'>
    <a
      class='flex items-center justify-center w-full py-[10px] text-lg border border-blue-500 text-blue-500 hover:bg-blue-500 hover:text-white rounded-lg transition'
      href={contributorsUrl}
      target='_blank'
      rel='noopener noreferrer'
    >
      <b class='text-xl lg:text-2xl'>
        <i class='fa fa-user-pen nav-logo-custom'></i> Contributors
      </b>
    </a>
  </div>
  <div class='w-full md:w-1/3 mb-3 flex justify-center'>
    <a
      class='flex items-center justify-center w-full py-[10px] text-lg border border-blue-500 text-blue-500 hover:bg-blue-500 hover:text-white rounded-lg transition'
      href={discordUrl}
      target='_blank'
      rel='noopener noreferrer'
    >
      <b class='text-xl lg:text-2xl'>
        <i class='fa-brands fa-discord nav-logo-custom'></i> Discord
      </b>
    </a>
  </div>
</div>

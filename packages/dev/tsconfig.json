{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "baseUrl": "../..",
    "paths": {
      "@/assets/*": ["packages/frontend/src/assets/*"],
      "@/components/*": ["packages/frontend/src/components/*"],
      "@/layouts/*": ["packages/frontend/src/layouts/*"],
      "@/styles/*": ["packages/frontend/src/styles/*"],
      "@/utils/*": ["packages/frontend/src/utils/*"],
      "@/db/*": ["packages/frontend/src/db/*"],
      "@/store/*": ["packages/frontend/src/store/*"],
      "@/packages/*": ["packages/*"],
      "@/tools/*": ["packages/dev/src/*"]
    }
  }
}

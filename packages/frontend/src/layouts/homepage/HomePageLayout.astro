---
import { ClientRouter } from "astro:transitions"

// user style sheets
import "@/styles/home_page.css"

// components
import Footer from "@/components/_common/Footer.astro"
import { Navbar } from "@/components/_common/Navbar"

interface Props {
  title: string
  activePage: string
  canonical?: string
  metaUrl?: string
  metaImage?: string
  metaDescription: string
}

const { title, activePage, canonical, metaUrl, metaImage, metaDescription } =
  Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <!-- for google search -->
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      rel="canonical"
      href={`https://azurlaneecgc.com${activePage ? `/${canonical ?? activePage}` : ""}`}
    />

    <meta
      name="keywords"
      content="English Community Guide Compendium, English Azur Lane, Azur, Lane, Azur Lane, ECGC, Azur Lane ECGC, Wiki, Guide, Guides, Help, Tool, Tools, Ship, Ships, Gear, Gears, Samheart564, Sam Heart, Sam"
    />

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - ECGC</title>
    <meta name="description" content={metaDescription} />
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta
      property="og:url"
      content={`https://azurlaneecgc.com/ECGC${metaUrl ? `/${metaUrl}` : ""}`}
    />
    {
      metaImage ? (
        <meta
          property="og:image"
          content={`https://azurlaneecgc.com/images/${metaImage}`}
        />
      ) : (
        <meta
          property="og:image"
          content="https://azurlaneecgc.com/images/misc/SiteIcon.png"
        />
      )
    }
    <meta name="og:description" content={metaDescription} />

    <link rel="icon" type="image/x-icon" href="/images/misc/SiteIcon.ico" />

    <script is:inline type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Azur Lane ECGC",
        "url": "https://azurlaneecgc.com/",
        "image": "https://azurlaneecgc.com/images/misc/SiteIcon.png"
      }
    </script>
  </head><span data-astro-transition-persist="someId2">
    <noscript data-astro-transition-persist="someId2"
      >Your browser does not support JavaScript!
    </noscript>
  </span>

  <ClientRouter />

  <body>
    <Navbar activePage={activePage} client:idle />
    <slot />
  </body>
  <Footer />


</html>
